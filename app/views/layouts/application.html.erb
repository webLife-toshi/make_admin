<!DOCTYPE html>
<html>
<head>
  <title>Hotelsite</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
  <% end %>
<div id="user_nav">
  <% if current_administrator %>
    Logged in as <%= current_administrator.name %>
    <%= link_to "Log out", admin_log_out_path %>
  <% else %> 
    <%= link_to "Log in", admin_log_in_path %>
  <% end %>
</div>
<%= yield %>

</body>
</html>
